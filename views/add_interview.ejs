
<!-- adding styles -->
<link rel="stylesheet" href="/assets/css/add_interview.css">

  <!-- auth -->
  <% if (locals.user) {%>

    <!-- main section -->
    <div class="container mt-4 col-md-4">
      <!-- heading -->
      <h4 class="py-3">Add an interview </h4>
      <!-- form -->
      <form class="row g-3 mt-1 rounded p-2 form_container" action="/interview/create" method="POST">
        <!-- company name -->
        <div class="col-12">
          <label for="company" class="form-label">Company</label>
          <input type="text" class="form-control" placeholder="Enter company name" id="company" name="company"
            required />
        </div>
        <!-- date -->
        <div class="col-12">
          <label for="date" class="form-label">Date</label>
          <input type="date" class="form-control" placeholder="Enter student email" id="date" name="date" required />
        </div>

        <!-- add interview button -->
        <div class="col-12 ">
          <button type="submit" class="btn btn-primary">Add interview</button>
        </div>

      </form>
    </div>
    </div>

    <%} %>