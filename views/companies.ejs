<!-- css -->
<link rel="stylesheet" href="/assets/css/companies.css">

 <%- include('header'); %>

    <!-- auth -->
    <% if(locals.user) {%>
        <!-- main section -->
        <section>
            <!-- for loop -->
            <% for(var i=0 ; i< body.length ; i++) { %>
                <!-- card section -->
                <div id="card_content">
                    <!-- company info section -->
                    <div id="opportunity">
                        <!-- company logo -->
                        <!-- <div id="image"><img crossorigin="anonymous" src="<%= body[i].company_logo %>"></div> -->
                        <div id="content">
                            <!-- company title -->
                            <p>
                                <%= body[i].title %>
                            </p>
                            <!-- company name -->
                            <p id="companyName">
                                <%=body[i].company_name %>
                            </p>
                            <!-- company details -->
                            <div id="details">
                                <div>
                                    <span>JobType &nbsp </span>
                                    <%= body[i].job_type %>
                                        <span>Application Publication&nbsp</span>
                                        <%= body[i].publication_date %>
                                </div>

                                <div>
                                    <span>Location &nbsp</span>
                                    <%= body[i].candidate_required_location %>
                                        <% if(body[i].salary.length>0) {%>
                                            <span>Salary &nbsp</span>
                                            <%= body[i].salary %>
                                                <%}else { %>
                                                    <span>Salary &nbsp</span> candidate performance in Interview
                                                    <%}%>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- apply button -->
                    <div id="button_to_apply">
                        <button class="btn btn-primary"><a id="apply" href="<%= body[i].url %>" target="_blank">Apply</a>
                        </button>
                    </div>

                </div>
                <% } %>
        </section>
        <%} %>